<body>

    <div class="container">
        <div class="jumbotron">


            <div class="card-body">

                <p class="card-text"></p>

                
                <table class="table table-dark table-hover table-bordered" style="width:900px" height="70px" cellpadding="70" cellspacing="50">
                    <thead>
                        <tr>
                            <th scope="col">RollNo</th>
                            <th scope="col">Name</th>
                            <th scope="col">Branch</th>
                            <th scope="col">Father Name</th>
                            <th scope="col">Date of birth</th>
                            <th scope="col">Gender</th>
                            <th scope="col">Links</th>
                        </tr>
                    </thead>
                    <tbody>


                        @{
                            List<Student> allstudent = this.ViewData["student"] as List<Student>;

                            foreach (Student s in allstudent)
                            {
                                <tr>
                                    
                                    <td>@s.RollNo</td>
                                    <td>@s.Name</td>
                                    <td>@s.Branch</td>
                                    <td>@s.FatherName</td>
                                    <td>@s.Dob</td>
                                    <td>@s.Gender</td>

                                    <td>
                                        <div class="btn">
                                            <a href="/Document/Update/@s.RollNo" class="btn btn-primary btn-lg">Edit</a>&nbsp &nbsp
                                            <a href="/Document/Delete/@s.RollNo" class="btn btn-outline-danger btn-lg">delete</a>&nbsp &nbsp
                                        </div>
                                       @*<button type="button" class="btn btn-danger badge-pill">Delete</button></td>*@
                                            
                                    
                                </tr>
                            }

                        }






                    </tbody>
