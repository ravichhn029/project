    <section>
        <div class="form-container">
            <h1>Add New Student</h1>
            <form id="f1" method="post">
                <div class="control">
                    
                    <label for="name">Course Name</label>
                    <input type="text" name="course" pattern="[A-Za-z]*" minlength="3" maxlength="18" required autofocus placeholder="Enter couse name"/>

                    <label for="name">Branch Name</label>
                    <input type="text" name="branch" pattern="[A-Za-z]*" minlength="3" maxlength="18" required autofocus placeholder="Enter course name"/>

                    <label for="name">Roll No</label>
                    <input type="text" name="rollno" minlength="1" maxlength="18" required autofocus placeholder="Enter rollno">

                    <label for="name">Name</label>
                    <input type="text" name="name" pattern="[A-Za-z]*" minlength="3" maxlength="18" required autofocus placeholder="Enter name"/>

                    <label for="name">Dob</label>
                    <input type="date" name="dob"  required autofocus placeholder="Enter dob">

                    <label for="name">Father Name</label>
                    <input type="text" name="father" pattern="[A-Za-z]*" minlength="3" maxlength="18" required autofocus placeholder="Enter father name"/>


                    <label for="name">Gender</label>
                    <div class="select">
                        <select name="gender" id="gender">

                            <option value="Male">Male</option>
                            <option value="Female">Female</option>
                        </select>
                    </div>
                </div>

                <div class="control">
                    <input type="submit" value="Save">

                </div>
            </form>
            <div class="link">
                <a href="/Home/Index">Back</a>
